<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_menu2"
    android:background="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_menu2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp" />

    <!--    오른쪽 drawer-->
    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:clickable="true"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:text="상세주문"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/option2_item_pic"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/menu_icecoffee"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/option2_item_name"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="400dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/option2_item_text"
            android:layout_width="300dp"
            android:layout_height="800dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="470dp"
            android:layout_marginStart="50dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_option2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"/>

        <!-- 가격표시 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="120dp"
            android:layout_marginEnd="200dp"
            android:text="￦"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/order_menu2_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="120dp"
            android:layout_marginEnd="60dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- 주문버튼 -->
        <Button
            android:id="@+id/order_menu2_item"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:text="주문하기"
            android:textStyle="bold"
            android:textSize="28sp"
            android:backgroundTint="@color/btn_color"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>

